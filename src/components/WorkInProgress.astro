<head>
    <link rel="stylesheet" href="https://use.typekit.net/rtk8zys.css">
</head>

<main>
    <div class="center prevent-select">
        <section id="hero">
            <h1>
                WORK IN<br>PROGRESS
            </h1>
        </section>
    </div>
</main>

<style>
    .center {
        box-sizing: content-box;
        margin-inline: auto;
        width: calc(100% - var(--space-xl) * 2);
        max-inline-size: 800px;
        padding-inline: var(--space-xl);
    }

    #background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    main {
        flex: 1;
        width: 100%;
        display: flex;
        flex-direction: column;
    }

    #hero {
        display: flex;
        align-items: center;
        flex-direction: column;
        gap: var(--space-3xl);
        padding-block-start: var(--space-3xl);
        padding-block-end: var(--space-3xl);
    }
    
    h1 {
        font-weight: 800;
        font-size: 10rem;
        line-height: 100%;
    }

    
    .prevent-select {
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            -khtml-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
    }
</style>