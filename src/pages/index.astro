---
// Welcome to Astro! Everything between these triple-dash code fences
// is your "component frontmatter". It never runs in the browser.
import Layout from "../layouts/Layout.astro";

const pageTitle = "Kirati Kiviniemi";
---
<!-- Below is your "component template." It's just HTML, but with
    some magic sprinkled in to help you build great templates. -->
<Layout pageTitle={pageTitle}>
    <div class="intro">
        <p>
            <strong><a href="/about/">Kirati Kiviniemi</a></strong> is a full-stack developer <span class="punctuation">;</span> Always creating<span class="punctuation">,</span> modifying<span class="punctuation">,</span> and improving programs for personal and commercial use. 
        </p>
        <p>
            Here's a treat for showing up!
        </p>
    </div>
    <div class="showcase prevent-select">
        <!-- Placeholder for a future project showcase -->
         <h2>
            Come and check back later...
         </h2>
         <h3>... there's sure to be something interesting. :)</h3>
    </div>
</Layout>

<style>
    

    .intro {
        display: flex;
        flex-direction: column;
        gap: var(--space-s);
    }

    .intro p, a {
        font-size: var(--step-5);
        line-height: var(--line-height-display);
    }

    .intro a {
        font-size: var(--step-5);
        font-family: "Unnamed Font Copy";

    }

    .punctuation {
        color: var(--sky);
    }

    strong {
        color: var(--black);
    }

    .showcase {
        display: flex;
        flex-direction: column;
        background-color: var(--sky);
        border-radius: var(--radius-l);
        align-items: center;
        justify-content: center;
        padding: var(--space-xl) var(--space-l);
    }

    .showcase h2 {
        font-size: var(--step-5);
        font-family: "Unnamed Font Copy";
    }
