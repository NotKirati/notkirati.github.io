---
// Welcome to Astro! Everything between these triple-dash code fences
// is your "component frontmatter". It never runs in the browser.
import Layout from "../layouts/Layout.astro";
import Banner from "../components/BannerIsland.astro"

const pageTitle = "Kirati Kiviniemi";
---
<!-- Below is your "component template." It's just HTML, but with
    some magic sprinkled in to help you build great templates. -->
<Layout pageTitle={pageTitle}>
    <div class="intro typography typography--intro">
        <p>
            <strong><a href="/about/">Kirati Kiviniemi</a></strong> is a full-stack developer <span class="punctuation">;</span> Always creating<span class="punctuation">,</span> modifying<span class="punctuation">,</span> and improving software.
        </p>
        <p>
            Here's a treat for showing up!
        </p>
    </div>
    <div class="showcase typography typography--main prevent-select">
        <!-- Placeholder for a future project showcase -->
         <h2>Check Again Later</h2>
         <h3>... there's sure to be something interesting. :)</h3>
    </div>
</Layout>

<style lang="scss">
    .typography {

        &--intro {
            font-size: var(--step-5);
            line-height: var(--line-height-display);

            a {
                font-family: "Unnamed Font Copy";
            };

            p {
                font-family: "Mondwest";
            };

            strong {
                color: var(--black);
            };
        };
        
        &--showcase {
            h2 {
                font-size: var(--step-5);
                font-family: "Unnamed Font Copy";
            };
        };
    };

    .intro {
        display: flex;
        flex-direction: column;
        gap: var(--space-s);
    };
    

    .showcase {
        display: flex;
        flex-direction: column;
        background-color: var(--sky);
        border-radius: var(--radius-l);
        align-items: center;
        justify-content: center;
        padding: var(--space-xl) var(--space-l);
    };
